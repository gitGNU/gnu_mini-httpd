# build mini-httpd

exe mini-httpd
    : main.cc log.cc config.cc HTTPParser.cc
      rh-construction.cc rh-copy-file.cc
      rh-standard-replies.cc rh-log-access.cc
      rh-read-request-header.cc rh-read-request-line.cc
      rh-setup-reply.cc rh-terminate.cc rh-flush-buffer.cc
      rh-io-callbacks.cc rh-read-request-body.cc
    : <define>PACKAGE_NAME=\\\"mini-httpd\\\"
      <define>PACKAGE_VERSION=\\\"1.0\\\"
      <define>PREFIX=\\\"/usr/local/mini-httpd\\\"
      <library>/boost/test//boost_prg_exec_monitor
    : <link>static <threading>single
    ;

path-constant BOOST_ROOT : [ modules.peek : BOOST_ROOT ] ;
use-project /boost : $(BOOST_ROOT) ;

