project mini-httpd ;

exe httpd
  : main.cpp logging.cpp io-driver.cpp http.cpp http-daemon.cpp
  : <use>/boost
    <use>/boost/program_options//boost_program_options
    <use>/boost/system//boost_system
    <use>/boost/test//boost_prg_exec_monitor
    <threading>single:<define>BOOST_DISABLE_THREADS
    <threading>multi:<use>/boost/thread//boost_thread
    <library>boost_log
    <library>/boost/program_options//boost_program_options
    <library>/boost/system//boost_system
    <library>/boost/test//boost_prg_exec_monitor
    <threading>multi:<library>/boost/thread//boost_thread
  ;

alias micro-httpd : httpd : <threading>single ;
alias mini-httpd  : httpd : <threading>multi ;

lib boost_log
  : boost/log/functions.cpp boost/log/log.cpp boost/log/log_manager.cpp
  : <use>/boost <link>shared:<define>BOOST_LOG_SOURCE <include>.
  :
  : <use>/boost <link>shared:<define>BOOST_DATE_TIME_DYN_LINK=1 <include>.
  ;

use-project /boost : [ modules.peek : BOOST_ROOT ] ;
